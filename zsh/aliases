# General
alias s='ag -i -C 2 --stats -Q' # Always use 's' for search and use tool which is the fastest atm

if test "$(uname)" = "Darwin"; then
  alias vim='mvim -v'
fi

alias v='vim'
alias t='tail -f -n `expr $LINES / 2` '

# Heroku
alias h='heroku'
alias hl='heroku logs --tail --remote'
alias hls='heroku logs --tail --remote staging'
alias hlp='heroku logs --tail --remote production'
alias hos='heroku open --remote staging'
alias hop='heroku open --remote production'
alias hcs='heroku run rails console --remote staging'
alias hcp='heroku run rails console --remote production'
alias hmsy='heroku maintenance:on --remote staging'
alias hmsn='heroku maintenance:off --remote staging'
alias hmpy='heroku maintenance:on --remote production'
alias hmpn='heroku maintenance:off --remote production'

# Deployment
alias ds='git push staging master'
alias dp='git push production master'

# Ruby
alias zs='rm -f .zeus.sock && zeus start'
alias zt='zeus test spec'
alias zc='zeus console'
alias zg='zeus generate'
alias zdb='zeus dbconsole'
alias zr='zeus rake'
alias pow='touch tmp/restart.txt'

# Vagrant
alias vu='vagrant up'
alias vh='vagrant halt'
alias vs='vagrant ssh'
alias vd='vagrant suspend'
alias vp='vagrant provision'

# Node
alias n='node'
alias ni='npm i'

# Filesystem
alias aliases='vim ~/.dotfiles/zsh/aliases'
alias l='ls -lrthG'
alias la='ls -lrthGa'
alias dot='cd ~/.dotfiles'
alias sshconf='vim ~/.ssh/config'
alias c='code'

# Tmux
alias tmux='TERM=screen-256color-bce tmux -2' # Better color support
alias mux='tmux new -s'
alias ta='tmux attach -t'

# Git
alias g='g' # Overrides g alias from zsh with self defined function g()
alias review='git diff master'
alias gpm='git push origin master'
alias gg="git log --pretty=format:'%Cred%h%Creset - %s %Cgreen(%an, %cr)%Creset' --abbrev-commit --date=relative"
alias ggg="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"

# Misc
alias retag='ctags -R --exclude=.svn --exclude=.git --exclude=log --exclude=tmp *'
